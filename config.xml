<?xml version='1.0' encoding='utf-8'?>
<widget id="ch.robots-ju.hydrodynamics.juratlantique" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>My Water Usage</name>
    <description>
        Calculate your water usage
    </description>
    <author email="clark.winkelmann@gmail.com" href="https://clarkwinkelmann.com/">
        Clark Winkelmann
    </author>
    <icon src="www/images/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="false" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <engine name="browser" spec="^4.1.0" />
    <engine name="android" spec="^7.0.0" />
</widget>
